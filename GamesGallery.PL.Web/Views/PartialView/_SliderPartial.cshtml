@model IEnumerable<GamesGallery.ViewModel.SliderViewModel>

@if (Model.Count() > 0)
{
    <div id="carousel-slider" class="carousel slide" data-ride="carousel">
        <div class="d-none d-md-block">
            <ol class="carousel-indicators">
                <li data-target="#carousel-slider" data-slide-to="0" class="active"></li>
                @for (int i = 1; i < Model.Count(); i++)
                {
                    <li data-target="#carousel-slider" data-slide-to="@i"></li>
                }
            </ol>
        </div>
        <div class="carousel-inner">
            @{ string active = "active"; }
            @foreach (var slider in Model)
            {
                <div class="carousel-item @active">
                    <img src="@Url.Content(slider.SlideImage)" class="d-block w-100" alt="...">
                    <div class="carousel-caption">
                        <div style="text-align:left;">
                            <div class="d-sm-inline">
                                <h1>@slider.Game.Title</h1>
                            </div>
                            <div class="d-none d-md-block">
                                <p><b>Minimum Requirements :</b></p>
                                <p>@Html.Raw(slider.Game.MinimumRequirements.Replace("\r\n", "<br />"))</p>
                            </div>
                            <a href="/Games/Details/@slider.Game.Id" class="btn btn-success">Download Now</a>
                        </div>
                    </div>
                </div>
                active = string.Empty;
            }
        </div>
        <div class="d-none d-sm-block">
            <a class="carousel-control-prev" href="#carousel-slider" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-slider" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}