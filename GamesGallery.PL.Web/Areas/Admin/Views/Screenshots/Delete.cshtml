@model GamesGallery.ViewModel.ScreenshotViewModel

@{
    ViewBag.Title = "Delete Screenshot";
}

@section styles{
    @Styles.Render("~/bundles/custom/css")
}

<div class="container">
    @{ Html.RenderPartial("_ViewHeadingPartial", "Remove Screenshot"); }
    @{ Html.RenderPartial("_RemoveWarningPartial", ""); }

    <hr />

    <dl class="dl-horizontal col-md-5">
        <dt>
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>

        <dd>
            @{ Html.RenderPartial("_ImagePartial", new Tuple<string, string>(Model.ImagePath, Model.Title + " Screenshot")); }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "TextArea", @readonly = "readonly" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Game", new { id = ViewBag.GameId })
        </div>
    }
</div>
