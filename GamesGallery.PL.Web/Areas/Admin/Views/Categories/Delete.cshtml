@model GamesGallery.ViewModel.CategoryViewModel

@{
    ViewBag.Title = "Delete Category";
}

@section styles{
    @Styles.Render("~/bundles/custom/css")
}

<div class="container">
    @{ Html.RenderPartial("_ViewHeadingPartial", "Remove Category"); }
    @{ Html.RenderPartial("_RemoveWarningPartial", ""); }

    <hr />

    <dl class="dl-horizontal col-md-5">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "TextArea", @readonly = "readonly" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Games)
        </dt>

        <dd>
            @{ Html.RenderPartial("_GamesPartial", Model.Games); }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    @{ Html.RenderPartial("_RemoveButtonPartial"); }
</div>
