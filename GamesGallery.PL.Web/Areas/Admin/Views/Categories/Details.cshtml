@model GamesGallery.ViewModel.CategoryViewModel

@{
    ViewBag.Title = "Category Details";
}

@section styles{
    @Styles.Render("~/bundles/custom/css")
}

<div class="container">
    @{ Html.RenderPartial("_ViewHeadingPartial", "Category Details"); }
    <hr />
    <dl class="dl-horizontal col-md-5">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "TextArea", @readonly = "readonly" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Games)
        </dt>

        <dd>
            @{ Html.RenderPartial("_GamesPartial", Model.Games); }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @{ Html.RenderPartial("_BackToListPartial"); }
    </p>
</div>

