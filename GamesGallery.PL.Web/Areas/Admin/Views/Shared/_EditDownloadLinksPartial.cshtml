@model IEnumerable<GamesGallery.ViewModel.DownloadLinkViewModel>

@if (Model.Count() > 0)
{
    <div>
        <div style="max-width:280px;">
            <span>
                @Html.RadioButton("DownloadLinkInsertionMode", "Append", true, htmlAttributes: new { @required = "required" })
                <span>Append</span>
                &nbsp;
                @Html.RadioButton("DownloadLinkInsertionMode", "Replace")
                <span>Replace</span>
            </span>
            <span class="float-right">
                <a href="#DownloadLinksPanel" data-toggle="collapse" title="Show Download Links">
                    Show Links
                    <span class="glyphicon glyphicon-menu-down"></span>
                </a>
            </span>
        </div>
        <div class="panel panel-default" style="margin:0px;border:none;">
            <div class="panel-body collapse" id="DownloadLinksPanel" style="padding:0px;border:none;">
                <div class="DownloadLinks">
                    @foreach (var item in Model)
                    {
                        <a class="DownloadLink" target="_blank" href="@item.Link">@Url.Content(item.Link)</a>
                    }
                </div>
            </div>
        </div>
    </div>
}
