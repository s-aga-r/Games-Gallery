@model IEnumerable<GamesGallery.ViewModel.GameViewModel>

@if (Model.Count() > 0)
{
    <a href="#GamesPanel" data-toggle="collapse" title="Show Games">
        Show Games
        <span class="glyphicon glyphicon-menu-down"></span>
    </a>
    <div class="panel panel-default" style="margin:0px;border:none;">
        <div class="panel-body collapse" id="GamesPanel" style="padding:0px;border:none;">
            <div class="Categories">
                @foreach (var item in Model)
                {
                    @Html.ActionLink(item.Title, "Details", "Games", new { area = "Admin", id = item.Id }, new { style = "display: block;" });
                }
            </div>
        </div>
    </div>
}
else
{
    <text>-</text>
}
