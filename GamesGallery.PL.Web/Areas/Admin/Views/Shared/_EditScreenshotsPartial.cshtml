@model IEnumerable<GamesGallery.ViewModel.ScreenshotViewModel>

@if (Model.Count() > 0)
{
    <div>
        <div style="max-width:280px;">
            <span>
                @Html.RadioButton("ScreenshotInsertionMode", "Append", true, htmlAttributes: new { @required = "required" })
                <span>Append</span>
                &nbsp;
                @Html.RadioButton("ScreenshotInsertionMode", "Replace")
                <span>Replace</span>
            </span>
            <span class="float-right">
                <a href="#ScreenshotsPanel" data-toggle="collapse" title="Show Screenshots">
                    Show All
                    <span class="glyphicon glyphicon-menu-down"></span>
                </a>
            </span>
        </div>
        <div class="panel panel-default" style="margin:0px;border:none;">
            <div class="panel-body collapse" id="ScreenshotsPanel" style="padding:0px;border:none;">
                <div class="Screenshots">
                    @foreach (var item in Model)
                    {
                        <a href="/File/ShowImage?imagePath=@item.ImagePath" target="_blank">
                            <img src="@Url.Content(item.ImagePath)" class="img-responsive img-thumbnail Screenshot" alt="@item.Title Screenshot" title="Show Image" />
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}
