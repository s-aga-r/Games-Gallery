@model GamesGallery.ViewModel.GameViewModel

@{
    ViewBag.Title = "Game Details";
}

@section styles{
    @Styles.Render("~/bundles/custom/css")
}

<div class="container">
    @{ Html.RenderPartial("_ViewHeadingPartial", "Game Details"); }

    <hr />

    <dl class="dl-horizontal col-md-5">
        <dt>
            @Html.DisplayNameFor(model => model.CoverImage)
        </dt>

        <dd>
            @{ Html.RenderPartial("_ImagePartial", new Tuple<string, string>(Model.CoverImage, Model.Title + " Cover Image")); }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "TextArea", @readonly = "readonly" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Size)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MinimumRequirements)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.MinimumRequirements, htmlAttributes: new { @class = "TextArea", @readonly = "readonly" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RecommendedRequirements)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.RecommendedRequirements, htmlAttributes: new { @class = "TextArea", @readonly = "readonly" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VideoTutorial)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VideoTutorial)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfUpload)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfUpload)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastUpdatedOn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastUpdatedOn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalDownloads)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalDownloads)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DownloadLinks)
        </dt>

        <dd>
            @{ Html.RenderPartial("_DownloadLinksPartial", Model.DownloadLinks); }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Screenshots)
        </dt>

        <dd>
            @{ Html.RenderPartial("_ScreenshotsPartial", Model.Screenshots); }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categories)
        </dt>

        <dd>
            @{ Html.RenderPartial("_CategoriesPartial", Model.Categories); }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @{ Html.RenderPartial("_BackToListPartial"); }
    </p>
</div>

